<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}SecureJob{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}
        <style>
            body {
                font-family: 'Segoe UI', sans-serif;
                background: #f0f2f5;
            }
            .navbar-custom {
                background: linear-gradient(90deg, #8e2de2, #4a00e0);
                color: #fff;
                box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            }
            .navbar-custom a {
                color: #fff;
                font-weight: 600;
            }
            .navbar-custom a:hover {
                color: #ffd700;
                text-decoration: none;
            }
            .btn-custom {
                border-radius: 8px;
                background: linear-gradient(135deg, #8e2de2, #4a00e0);
                color: #fff;
                font-weight: 600;
                transition: all 0.3s ease;
            }
            .btn-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(0,0,0,0.3);
                background: linear-gradient(135deg, #4a00e0, #8e2de2);
            }
            .btn-simulateur {
                background: linear-gradient(135deg, #ff8a00, #ff5e00);
                border: none;
                color: white;
                font-weight: 600;
                border-radius: 8px;
                padding: 0.375rem 0.75rem;
                transition: all 0.3s ease;
            }
            .btn-simulateur:hover {
                background: linear-gradient(135deg, #ff5e00, #ff8a00);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(0,0,0,0.3);
            }
            .alert {
                border-radius: 10px;
                box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            }
        </style>
    {% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('candidat_index') }}">SecureJob</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('candidat_index') }}">Candidats</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn-simulateur text-white ms-2"
                       href="{{ path('candidat_simulateur_index') }}">
                        ðŸŽ¤ Simulateur
                    </a>
                </li>
                {% if is_granted('ROLE_RECRUITER') %}
                    <li class="nav-item">
                        <a class="nav-link text-white ms-2" href="{{ path('recruiter_dashboard') }}">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white ms-2" href="{{ path('recruiter_offres_index') }}">Mes Offres</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link btn-custom text-white ms-2" href="{{ path('candidat_new') }}">Ajouter Candidat</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger btn-sm text-white ms-2" href="{{ path('app_logout') }}">DÃ©connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link text-white ms-2" href="{{ path('app_login') }}">Connexion Recruteur</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-5">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}

</body>
</html>
