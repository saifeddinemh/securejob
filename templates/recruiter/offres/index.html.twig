{% extends 'base.html.twig' %}

{% block title %}Mes offres d'emploi{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mes offres d'emploi</h1>
        <a href="{{ path('recruiter_offres_new') }}" class="btn btn-success">Créer une offre</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Lieu</th>
                        <th>Contrat</th>
                        <th>Date</th>
                        <th>Candidatures</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for offre in offres %}
                    <tr>
                        <td>{{ offre.titre }}</td>
                        <td>{{ offre.lieu }}</td>
                        <td><span class="badge bg-info">{{ offre.typeContrat }}</span></td>
                        <td>{{ offre.createdAt|date('d/m/Y') }}</td>
                        <td>
                            <span class="badge bg-primary">{{ offre.candidatures|length }}</span>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('recruiter_offres_edit', {'id': offre.id}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
                                <form method="post" action="{{ path('recruiter_offres_delete', {'id': offre.id}) }}" onsubmit="return confirm('Êtes-vous sûr ?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucune offre publiée pour le moment.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a href="{{ path('recruiter_dashboard') }}" class="btn btn-secondary">Retour au Dashboard</a>
    </div>
</div>
{% endblock %}
