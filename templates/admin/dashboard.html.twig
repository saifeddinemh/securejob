{% extends 'admin/base_admin.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
    <h2 class="mb-4">Vue d'ensemble</h2>
    
    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card card-stat h-100 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Candidats</h6>
                        <h3 class="mb-0 fw-bold">{{ candidates_count }}</h3>
                    </div>
                    <div class="card-icon bg-gradient-primary">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card card-stat h-100 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Recruteurs</h6>
                        <h3 class="mb-0 fw-bold">{{ recruiters_count }}</h3>
                    </div>
                    <div class="card-icon bg-gradient-success">
                        <i class="fas fa-briefcase"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card card-stat h-100 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Missions</h6>
                        <h3 class="mb-0 fw-bold">{{ missions_count }}</h3>
                    </div>
                    <div class="card-icon bg-gradient-warning">
                        <i class="fas fa-tasks"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card card-stat h-100 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Projets</h6>
                        <h3 class="mb-0 fw-bold">{{ projects_count }}</h3>
                    </div>
                    <div class="card-icon bg-gradient-info">
                        <i class="fas fa-project-diagram"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">Actions Rapides</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_recruiters') }}" class="btn btn-outline-primary text-start">
                            <i class="fas fa-building me-2"></i> Gérer les recruteurs
                        </a>
                        <a href="{{ path('admin_candidates') }}" class="btn btn-outline-success text-start">
                            <i class="fas fa-users me-2"></i> Gérer les candidats
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">Dernière activité</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center py-4">
                        <i class="fas fa-history fa-2x mb-3 d-block"></i>
                        Aucune activité récente à afficher.
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
