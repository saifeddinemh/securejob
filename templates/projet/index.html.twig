{% extends 'base.html.twig' %}

{% block title %}Liste des Projets{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Projets Disponibles</h1>
            {% if is_granted('ROLE_RECRUITER') %}
                <a href="{{ path('app_projet_new') }}" class="btn btn-primary">
                    Créer un nouveau projet
                </a>
            {% endif %}
        </div>

        <div class="row">
            {% for projet in projets %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ projet.nom }}</h5>
                            <p class="card-text">{{ projet.description|length > 100 ? projet.description|slice(0, 100) ~ '...' : projet.description }}</p>

                            <div class="mb-3">
                                <small class="text-muted">
                                    <strong>Participants:</strong> {{ projet.participants|length }}/{{ projet.nombreParticipantsMax }}
                                </small>
                            </div>

                            <div class="progress mb-3" style="height: 10px;">
                                <div class="progress-bar" role="progressbar"
                                     style="width: {{ (projet.participants|length / projet.nombreParticipantsMax * 100)|round }}%"
                                     aria-valuenow="{{ projet.participants|length }}"
                                     aria-valuemin="0"
                                     aria-valuemax="{{ projet.nombreParticipantsMax }}">
                                </div>
                            </div>

                            <a href="{{ path('app_projet_show', {'id': projet.id}) }}" class="btn btn-outline-primary w-100">
                                Voir les détails
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <p class="mb-0">Aucun projet disponible pour le moment.</p>
                        {% if is_granted('ROLE_RECRUITER') %}
                            <a href="{{ path('app_projet_new') }}" class="btn btn-primary mt-3">
                                Créer le premier projet
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
