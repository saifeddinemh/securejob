{% extends 'base.html.twig' %}

{% block title %}Accueil - SecureJob{% endblock %}

{% block body %}
    <style>
        body {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            font-family: 'Arial', sans-serif;
            color: #fff;
        }
        .container {
            max-width: 1200px;
            margin: 50px auto;
            text-align: center;
        }
        h1 {
            font-size: 3rem;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 40px;
        }
        .card {
            background: rgba(255,255,255,0.1);
            border-radius: 15px;
            padding: 20px;
            transition: transform 0.3s, background 0.3s;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }
        .card:hover {
            transform: translateY(-10px);
            background: rgba(255,255,255,0.2);
        }
        .card img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
            object-fit: cover;
            margin-bottom: 15px;
            border: 3px solid #fff;
        }
        .card h2 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }
        .card p {
            font-size: 0.9rem;
        }
        .btn-primary {
            background: #ff512f;
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            text-decoration: none;
            color: #fff;
            transition: background 0.3s;
        }
        .btn-primary:hover {
            background: #dd2476;
        }
    </style>

    <div class="container">
        <h1>Bienvenue sur SecureJob</h1>
        <p>Découvrez nos candidats talentueux</p>

        <div class="card-grid">
            {% for candidat in candidats %}
                <div class="card">
                    {% if candidat.photoPath %}
                        <img src="{{ asset('uploads/photos/' ~ candidat.photoPath) }}" alt="{{ candidat.nom }}">
                    {% else %}
                        <img src="https://via.placeholder.com/100?text=Photo" alt="Placeholder">
                    {% endif %}
                    <h2>{{ candidat.nom }} {{ candidat.prenom }}</h2>
                    <p>{{ candidat.email }}</p>
                    <p>{{ candidat.telephone ?: 'Téléphone non renseigné' }}</p>
                    <a href="{{ path('candidat_show', {'id': candidat.id}) }}" class="btn-primary">Voir le profil</a>
                </div>
            {% else %}
                <p>Aucun candidat disponible pour le moment.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
