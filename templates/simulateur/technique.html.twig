{% extends 'base.html.twig' %}

{% block title %}Entretien Technique - Simulateur SecureJob{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .technique-container {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(142, 45, 226, 0.1);
            border: 2px solid #e0d4f7;
        }
        .metier-card {
            background: linear-gradient(135deg, #f3e8ff, #e0d4f7);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            border: 2px solid #8e2de2;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .metier-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(142, 45, 226, 0.2);
        }
        .metier-card.selected {
            background: linear-gradient(135deg, #8e2de2, #4a00e0);
            color: white;
        }
        .niveau-badge {
            display: inline-block;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 600;
            margin: 5px;
            cursor: pointer;
            border: 2px solid transparent;
        }
        .niveau-badge:hover {
            transform: scale(1.05);
        }
        .junior { background: #e3f2fd; color: #1565c0; }
        .intermediaire { background: #e8f5e9; color: #2e7d32; }
        .senior { background: #fff3e0; color: #f57c00; }
        .niveau-badge.selected {
            border-color: #4a00e0;
            font-weight: bold;
        }
        .question-item {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            border-left: 4px solid #8e2de2;
        }
        .resultat-card {
            background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
            border-radius: 15px;
            padding: 25px;
            border: 3px solid #4caf50;
        }
        .score-circle {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: conic-gradient(#8e2de2 0% {% if resultats %}{{ resultats.score }}{% else %}0{% endif %}%, #e0e0e0 {% if resultats %}{{ resultats.score }}{% else %}0{% endif %}% 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }
        .score-inner {
            width: 90px;
            height: 90px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            font-weight: bold;
            color: #8e2de2;
        }
        .feedback-box {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin: 15px 0;
            border-left: 5px solid;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 style="color: #8e2de2;">
                üíª Entra√Ænement aux Entretiens Techniques
            </h1>
            <a href="{{ path('candidat_simulateur_index') }}" class="btn btn-custom">
                ‚Üê Retour au simulateur
            </a>
        </div>

        {% if not resultats %}
            <!-- Formulaire de s√©lection -->
            <div class="technique-container">
                <div class="alert alert-info" style="background: #e3f2fd; border-color: #2196f3;">
                    <h5>üéØ Instructions</h5>
                    <p>S√©lectionnez votre m√©tier et votre niveau d'exp√©rience. Le simulateur vous pr√©sentera des questions types adapt√©es √† votre profil.</p>
                </div>

                <form method="post">
                    <!-- S√©lection du m√©tier -->
                    <h4 class="mb-3" style="color: #4a00e0;">1. Choisissez votre m√©tier</h4>
                    <div class="row g-3">
                        {% for metier in questions|keys %}
                            <div class="col-md-4">
                                <div class="metier-card text-center" onclick="selectMetier('{{ metier }}')">
                                    <h5>{{ metier }}</h5>
                                    <small class="text-muted">{{ questions[metier]|length }} niveaux disponibles</small>
                                    <input type="radio" name="metier" value="{{ metier }}"
                                           id="metier_{{ loop.index }}" class="d-none" required>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- S√©lection du niveau -->
                    <h4 class="mt-4 mb-3" style="color: #4a00e0;">2. Choisissez votre niveau d'exp√©rience</h4>
                    <div class="text-center">
                    <span class="niveau-badge junior" onclick="selectNiveau('junior')">
                        üë∂ Junior (0-2 ans)
                    </span>
                        <span class="niveau-badge intermediaire" onclick="selectNiveau('intermediaire')">
                        üíº Interm√©diaire (2-5 ans)
                    </span>
                        <span class="niveau-badge senior" onclick="selectNiveau('senior')">
                        üéì Senior (5+ ans)
                    </span>
                        <input type="radio" name="niveau" value="junior" id="niveau_junior" class="d-none" required>
                        <input type="radio" name="niveau" value="intermediaire" id="niveau_intermediaire" class="d-none">
                        <input type="radio" name="niveau" value="senior" id="niveau_senior" class="d-none">
                    </div>

                    <!-- Bouton de d√©marrage -->
                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-custom btn-lg" style="padding: 12px 50px;">
                            üöÄ D√©marrer l'entra√Ænement technique
                        </button>
                    </div>
                </form>
            </div>
        {% else %}
            <!-- R√©sultats -->
            <div class="technique-container">
                <div class="resultat-card">
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center">
                            <div class="score-circle">
                                <div class="score-inner">
                                    {{ resultats.score }}%
                                </div>
                            </div>
                            <h5 class="mt-3" style="color: #2e7d32;">Score technique</h5>
                        </div>
                        <div class="col-md-8">
                            <h3 style="color: #4a00e0;">{{ resultats.feedback.titre }}</h3>
                            <p>{{ resultats.feedback.message }}</p>

                            <div class="feedback-box" style="border-left-color: {{ resultats.feedback.couleur }};">
                                <h5>üí° Conseil :</h5>
                                <p>{{ resultats.feedback.conseil }}</p>
                            </div>

                            <div class="mt-3">
                                <strong>M√©tier :</strong> {{ resultats.metier }}<br>
                                <strong>Niveau :</strong> {{ resultats.niveau|capitalize }}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Questions propos√©es -->
                <div class="mt-5">
                    <h4 style="color: #4a00e0;">üìã Questions types pour votre profil</h4>
                    <p>Voici les questions sur lesquelles vous devriez vous entra√Æner :</p>

                    <div class="row mt-3">
                        {% for question in resultats.questions %}
                            <div class="col-md-6 mb-3">
                                <div class="question-item">
                                    <div class="d-flex">
                                        <span class="me-2" style="color: #8e2de2;">{{ loop.index }}.</span>
                                        <span>{{ question }}</span>
                                    </div>
                                    <div class="mt-2">
                                        <button class="btn btn-sm btn-custom" onclick="showAnswer({{ loop.index }})">
                                            Voir une r√©ponse mod√®le
                                        </button>
                                        <div id="answer_{{ loop.index }}" class="mt-2 small text-muted" style="display: none;">
                                            <em>Exemple de r√©ponse : D√©veloppez votre r√©ponse en expliquant le concept, donnez un exemple concret, et mentionnez les bonnes pratiques associ√©es.</em>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Actions -->
                <div class="text-center mt-5">
                    <a href="{{ path('candidat_simulateur_technique') }}" class="btn btn-custom btn-lg me-3">
                        üîÅ Nouvel entra√Ænement
                    </a>
                    <a href="{{ path('candidat_simulateur_test') }}" class="btn btn-custom btn-lg">
                        üìù Passer un test technique
                    </a>
                </div>
            </div>
        {% endif %}
    </div>

    <script>
        function selectMetier(metier) {
            document.querySelectorAll('.metier-card').forEach(card => {
                card.classList.remove('selected');
            });

            const card = event.currentTarget;
            card.classList.add('selected');

            document.getElementById('metier_' + metier.replace(/\s+/g, '_')).checked = true;
        }

        function selectNiveau(niveau) {
            document.querySelectorAll('.niveau-badge').forEach(badge => {
                badge.classList.remove('selected');
            });

            const badge = event.currentTarget;
            badge.classList.add('selected');

            document.getElementById('niveau_' + niveau).checked = true;
        }

        function showAnswer(index) {
            const answerDiv = document.getElementById('answer_' + index);
            if (answerDiv.style.display === 'none') {
                answerDiv.style.display = 'block';
            } else {
                answerDiv.style.display = 'none';
            }
        }
    </script>
{% endblock %}
