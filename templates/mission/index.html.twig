{% extends 'base.html.twig' %}

{% block title %}Missions Freelance{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Missions Freelance</h1>
        {% if is_granted('ROLE_RECRUITER') %}
            <a href="{{ path('app_mission_new') }}" class="btn btn-primary">Publier une mission</a>
        {% endif %}
    </div>

    <div class="row">
        {% for mission in missions %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ mission.titre }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ mission.entreprise.nom }}</h6>
                        <p class="card-text text-truncate">{{ mission.description }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-info text-dark">{{ mission.budget }} €</span>
                            <span class="text-muted small">{{ mission.duree }}</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="{{ path('app_mission_show', {'id': mission.id}) }}" class="btn btn-outline-primary btn-sm w-100">Voir les détails</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="alert alert-info">Aucune mission disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
