{% extends 'base.html.twig' %}

{% block title %}Nouvelle Mission{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">Publier une nouvelle mission</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="mt-4">
                            <button class="btn btn-success">Enregistrer la mission</button>
                            <a href="{{ path('app_mission_index') }}" class="btn btn-link">Annuler</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
